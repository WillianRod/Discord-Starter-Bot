{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "eslint-plugin-import-helpers"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "info"
        ]
      }
    ],
    "max-len": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "padded-blocks": [
      "error",
      {
        "classes": "always"
      }
    ],
    "arrow-body-style": "off",
    "arrow-parens": [
      "warn",
      "as-needed"
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "import/no-useless-path-segments": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          "parent",
          "sibling",
          "index"
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ]
  }
}
